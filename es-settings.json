{
    "settings": {
        "index": {
            "number_of_shards": 5,
            "number_of_replicas": 1,
            "mapping.allow_type_wrapper": true
        }
    },
    "mappings": {
        "user": {
            "_timestamp": {
                "enabled": true,
                "store": true
            },
            "_source": {
                "enabled": true
            },
            "properties": {
                "firstname": {
                    "type": "string",
                    "index": "not_analyzed",
                    "fields": {
                        "raw": {
                            "type": "string",
                            "index": "not_analyzed"
                        }
                    }
                },
                "lastname": {
                    "type": "string",
                    "index": "analyzed",
                    "fields": {
                        "raw": {
                            "type": "string",
                            "index": "not_analyzed"
                        }
                    }
                },
                "email": {
                    "type": "string",
                    "index": "not_analyzed"
                },
                "suggest": {
                    "type": "completion",
                    "index_analyzer": "simple",
                    "search_analyzer": "simple"
                }
            },
            "transform": {
                "script": "ctx._source.suggest = ctx._source.firstname.toLowerCase().capitalize() + \", \" +ctx._source.lastname;",
                "lang": "groovy"
            }
        }
    }
}
